grayBg()
	background-color rgb(arguments, arguments, arguments)

*
	border 0
	margin 0
	padding 0
	font-size 100%
	box-sizing border-box

html
	width 100%
	grayBg 50

body
	font-size 14px
	line-height 1.3
	color rgb(80, 80, 80)

ul
	list-style-position inside
	margin-bottom 10px
	li
		border-radius 1em

p
	margin-bottom 1em
	img
		vertical-align middle

h1, h2, h3
	font-family Arial
	font-weight 900
